<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionCardOverallStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:layout_margin">@dimen/large_padding_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WelcomeCloseStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/welcome_close_title</item>
        <item name="android:layout_margin">@dimen/large_padding_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="RadioCheckBoxStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FullImageViewStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
